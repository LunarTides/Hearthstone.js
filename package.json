{
	"name": "hearthstone.js",
	"version": "4.0.0-beta.0",
	"description": "A console-based recreation of Hearthstone made in NodeJS",
	"main": "./index.ts",
	"type": "module",
	"scripts": {
		"start": "bunx tsc && bun .",
		"format": "bunx biome check --fix",
		"ci": "bunx biome ci && bun test && bunx tsc && bun ./tools/test/cards.ts && bun ./tools/test/crash.ts && bun ./tools/test/crash.ts && bun ./tools/test/crash.ts && bun ./tools/test/crash.ts && bun ./tools/test/crash.ts",
		"script:vanilla:generate": "bun ./tools/vanilla/generate.ts",
		"script:vanilla:generate-no-filter": "bun ./tools/vanilla/generate.ts --no-filter"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/LunarTides/Hearthstone.js.git"
	},
	"author": "LunarTides",
	"license": "GPL-3.0-or-later",
	"dependencies": {
		"@inquirer/core": "^11.0.2",
		"@inquirer/prompts": "^8.2.0",
		"@kmamal/sdl": "^0.11.13",
		"axios": "^1.13.5",
		"boxen": "^8.0.1",
		"bun": "^1.3.9",
		"chalk-tags": "^1.1.3",
		"commander": "^14.0.3",
		"date-and-time": "^4.1.0",
		"deckstrings": "^3.1.2",
		"lodash": "^4.17.21"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.4",
		"@hearthstonejs/vanillatypes": "^5.3.0",
		"@types/bun": "^1.3.9",
		"@types/lodash": "^4.17.21"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"@kmamal/sdl",
		"bun"
	]
}
