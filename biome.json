{
	"$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"correctness": {
				"noUnusedFunctionParameters": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"files": {
		"includes": ["**", "!vanillacards.json"]
	}
}
